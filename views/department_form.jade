extends layout 

block content 

    .main-content
        h1=title 

        form(method="POST" action="") 
            div.form-group 
                label(for='name') Name: 
                input#name.form-control(type='text' placeholder='name' name='name' required='true' value=(undefined===department ? '' : department.name))
                button(type='submit') Submit 

        if errors 
            ul 
                for error in errors 
                    li!= error.msg